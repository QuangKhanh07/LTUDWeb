
<div class="card" style="max-width: 100%; margin: 20px auto 220px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); border-radius: 8px; overflow: hidden;">
    <div class="card-header" style="background-color: #007bff; color: #fff; padding: 15px;">
        <h4 style="margin: 0;">Đổi mật khẩu</h4>
    </div>
    <div class="card-body" style="padding: 20px;">
        <form action="~/Account/ChangePassword" method="post">
            <!-- Mật khẩu cũ -->
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="oldPassword">Mật khẩu cũ:</label>
                <input type="password" class="form-control" name="oldPassword" id="oldPassword" required autofocus style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            </div>

            <!-- Mật khẩu mới -->
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="newPassword">Mật khẩu mới:</label>
                <input type="password" class="form-control" name="newPassword" id="newPassword" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            </div>

            <!-- Xác nhận mật khẩu -->
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="confirmPassword">Xác nhận lại mật khẩu:</label>
                <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            </div>

            <!-- Nút hành động -->
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary" style="padding: 10px 20px; border-radius: 4px;">Đổi mật khẩu</button>
                <a href="~/" class="btn btn-secondary" style="padding: 10px 20px; border-radius: 4px; margin-left: 10px;">Bỏ qua</a>
            </div>
        </form>
    </div>
</div>
